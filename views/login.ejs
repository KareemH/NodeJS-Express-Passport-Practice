<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <%# The entire login card %>
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
      <%- include("./partials/messages"); %> <%# This form will submit all of
      the user's input to the server as a POST request %>
      <form action="/users/login" method="POST">
        <%# Email section %>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>

        <%# Password section %>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>

        <%# Button will submit all input to req.body as a POST request %>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>

      <%# Rerouting user to register page if no account %>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>
